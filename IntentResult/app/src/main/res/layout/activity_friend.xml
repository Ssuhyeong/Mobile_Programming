<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FriendActivity">

    <ImageView
        android:id="@+id/imageView2_1"
        android:layout_width="313dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/imageview2_1" />

    <TextView
        android:id="@+id/textView2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/purple_500"/>

    <TextView
        android:id="@+id/textView2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나: 냥냥이"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/editText2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="없어 -_-"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="채팅 메시지 보내기" />
</LinearLayout>